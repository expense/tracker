<h1>Listing statements</h1>

<table>
  <thead>
    <tr>
      <th>Command</th>
      <th>Params</th>
      <th>Comment</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.command %></td>
        <td><%= statement_params(statement) %></td>
        <td><%= statement.comment %></td>
        <td><%= statement.time %></td>
        <td><%= link_to 'Show', statement %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

