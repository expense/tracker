<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Command</th>
      <th>Interpretation</th>
      <th>Comment</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.command %></td>
        <td><%= item.info.to_s %></td>
        <td><%= item.comment %></td>
        <td><%= item.when %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
